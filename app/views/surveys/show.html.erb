<% content_for(:breadcrumb) do  %>
  <li class="flex">
    <div class="flex items-center">
      <svg class="h-full w-6 flex-shrink-0 text-gray-200" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z" />
      </svg>
      <a href="<% survey_path(@survey) %>" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">
        <%= @survey.question.text %>
      </a>
    </div>
  </li>
<% end %>

<div class="overflow-hidden bg-white sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg font-medium leading-6 text-gray-900">
      <%= @survey.question.text %>
    </h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">
      <%= @survey.question.description %>
    </p>
  </div>
  <div class="px-4 py-5 sm:px-6">
    <ul role="list" class="">
      <% @survey.question.response_options.each do |response_option| %>
        <li class="px-4 py-2 sm:px-0">
          <button type="button" class="items-center inline-block text-center rounded-md border border-gray-300 bg-white px-6 py-3 text-base font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 w-32">
            <%= response_option.value %>
          </button>
        </li>
      <% end %>
    </ul>
  </div>
</div>
